@model SysnaraIMAVA.Models.Matricula

@{
    ViewData["Title"] = "Editar Matrícula";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SysnaraIMAVA</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Russo+One&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery UI -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
            padding: 0.75rem 1.25rem;
        }

        .form-control, .form-select {
            font-size: 0.875rem;
            border-radius: 0.25rem;
        }

        .form-label {
            margin-bottom: 0.25rem;
            font-weight: 500;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        }

        .accordion-button:not(.collapsed) {
            background-color: #f8f9fa;
            color: #2c3e50;
        }

        .accordion-button:focus {
            box-shadow: none;
            border-color: rgba(0,0,0,.125);
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }

            .btn-primary:hover {
                background-color: #3a5bbf;
                border-color: #3a5bbf;
            }

        .title-font {
            font-family: 'Russo One', sans-serif;
        }

        .small-label {
            font-size: 0.75rem;
            font-weight: 600;
            color: #495057;
        }

        .neon-border {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            background-color: white;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
</head>
<body>
    <div class="container-fluid py-3">
        <div class="card border-0 shadow">
            <div class="card-header bg-gradient-primary text-white">
                <h3 class="mb-0 title-font"><i class="fas fa-user-graduate me-2"></i>Editar Matrícula</h3>
            </div>

            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate id="matriculaForm">
                    <input type="hidden" asp-for="Idest" />

                    <!-- Sección Padre/Encargado -->
                    <div class="neon-border">
                        <h5 class="mb-3"><i class="fas fa-user-tie me-2"></i>Datos del Padre/Encargado</h5>
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label asp-for="Idpadre" class="form-label small-label">Identidad del Padre</label>
                                <input asp-for="Idpadre" class="form-control" id="Idpadre" placeholder="Buscar por identidad o nombre" required />
                                <span asp-validation-for="Idpadre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="NombrePadre" class="form-label small-label">Nombre</label>
                                <input asp-for="NombrePadre" class="form-control" id="NombrePadre" required />
                                <span asp-validation-for="NombrePadre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Parentesco" class="form-label small-label">Parentesco</label>
                                <select asp-for="Parentesco" class="form-select" required>
                                    <option value=""></option>
                                    <option value="padre">PADRE</option>
                                    <option value="madre">MADRE</option>
                                    <option value="encargado">ENCARGADO(A)</option>
                                    <option value="hermano">HERMANO(A)</option>
                                    <option value="tio">TIO(A)</option>
                                    <option value="abuelo">ABUELO(A)</option>
                                    <option value="primo">PRIMO(A)</option>
                                </select>
                                <span asp-validation-for="Parentesco" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="TelefonoPadre" class="form-label small-label">Teléfono</label>
                                <input asp-for="TelefonoPadre" class="form-control" id="TelefonoPadre" />
                                <span asp-validation-for="TelefonoPadre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="CelPadre" class="form-label small-label">Celular</label>
                                <input asp-for="CelPadre" class="form-control" id="CelPadre" />
                                <span asp-validation-for="CelPadre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="DireccionPadre" class="form-label small-label">Dirección</label>
                                <input asp-for="DireccionPadre" class="form-control" id="DireccionPadre" />
                                <span asp-validation-for="DireccionPadre" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Sección Estudiante -->
                    <div class="neon-border">
                        <h5 class="mb-3"><i class="fas fa-user-graduate me-2"></i>Datos del Estudiante</h5>
                        <div class="row g-3">

                            <div class="col-md-2">
                                <label asp-for="Idaño" class="form-label small-label">Año</label>
                                <select asp-for="Idaño" id="Idaño" class="form-select" asp-items="ViewBag.Idaño" required></select>
                                <span asp-validation-for="Idaño" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Idestudiante" class="form-label small-label">Identidad</label>
                                <input asp-for="Idestudiante" class="form-control" required />
                                <span asp-validation-for="Idestudiante" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="NombreEstudiante" class="form-label small-label">Nombre Completo</label>
                                <input asp-for="NombreEstudiante" class="form-control" required />
                                <span asp-validation-for="NombreEstudiante" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Nacionalidad" class="form-label small-label">Nacionalidad</label>
                                <select asp-for="Nacionalidad" class="form-select" required>
                                    <option value="HONDUREÑO(A)">HONDUREÑO(A)</option>
                                    <option value="EXTRANJERO(A)">EXTRANJERO(A)</option>
                                </select>
                                <span asp-validation-for="Nacionalidad" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="FechaNacimiento" class="form-label small-label">Fecha Nacimiento</label>
                                <input type="date" asp-for="FechaNacimiento" class="form-control" required />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="LugarNacimiento" class="form-label small-label">Lugar Nacimiento</label>
                                <input asp-for="LugarNacimiento" class="form-control" />
                                <span asp-validation-for="LugarNacimiento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Genero" class="form-label small-label">Género</label>
                                <select asp-for="Genero" class="form-select" required>
                                    <option value=""></option>
                                    <option value="FEMENINO">FEMENINO</option>
                                    <option value="MASCULINO">MASCULINO</option>
                                </select>
                                <span asp-validation-for="Genero" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="TipoSangre" class="form-label small-label">Tipo Sangre</label>
                                <select asp-for="TipoSangre" class="form-select">
                                    <option value=""></option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                                <span asp-validation-for="TipoSangre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Alergia" class="form-label small-label">Alergias</label>
                                <select asp-for="Alergia" class="form-select">
                                    <option value="NO">NO</option>
                                    <option value="SI">SI</option>
                                </select>
                                <span asp-validation-for="Alergia" class="text-danger small"></span>
                            </div>

                            <div class="col-md-1">
                                <label asp-for="Edad" class="form-label small-label">Edad</label>
                                <input type="number" asp-for="Edad" class="form-control" />
                                <span asp-validation-for="Edad" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="TelefonoEstudiante" class="form-label small-label">Teléfono</label>
                                <input asp-for="TelefonoEstudiante" class="form-control" />
                                <span asp-validation-for="TelefonoEstudiante" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="CelularEstudiante" class="form-label small-label">Celular</label>
                                <input asp-for="CelularEstudiante" class="form-control" />
                                <span asp-validation-for="CelularEstudiante" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Correo" class="form-label small-label">Correo</label>
                                <input type="email" asp-for="Correo" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-5">
                                <label asp-for="Direccion" class="form-label small-label">Dirección</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Estado" class="form-label small-label">Estado</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value=""></option>
                                    <option value="ACTIVO">ACTIVO</option>
                                    <option value="INACTIVO">INACTIVO</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="VacunasCovid" class="form-label small-label">Vacunas Covid</label>
                                <input type="number" asp-for="VacunasCovid" class="form-control" />
                                <span asp-validation-for="VacunasCovid" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Sección Académica -->
                    <div class="neon-border">
                        <h5 class="mb-3"><i class="fas fa-graduation-cap me-2"></i>Información Académica</h5>
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label asp-for="Idgrado" class="form-label small-label">ID Grado</label>
                                <select asp-for="Idgrado" id="Idgrado" class="form-select" asp-items="ViewBag.Idgrado" required></select>
                                <span asp-validation-for="Idgrado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Grado" class="form-label small-label">Grado</label>
                                <input asp-for="Grado" class="form-control" id="Grado" readonly required />
                                <span asp-validation-for="Grado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-1">
                                <label asp-for="Seccion" class="form-label small-label">Sección</label>
                                <input asp-for="Seccion" class="form-control" id="Seccion" readonly />
                                <span asp-validation-for="Seccion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Jornada" class="form-label small-label">Jornada</label>
                                <input asp-for="Jornada" class="form-control" id="Jornada" readonly />
                                <span asp-validation-for="Jornada" class="text-danger small"></span>
                            </div>

                            <div class="col-md-5">
                                <label asp-for="NivelDescripcion" class="form-label small-label">Nivel Académico</label>
                                <input asp-for="NivelDescripcion" class="form-control" id="NivelDescripcion" readonly />
                                <span asp-validation-for="NivelDescripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-5">
                                <label asp-for="Proviene" class="form-label small-label">Institución de Procedencia</label>
                                <input asp-for="Proviene" class="form-control" />
                                <span asp-validation-for="Proviene" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="Beca" class="form-label small-label">Beca</label>
                                <select asp-for="Beca" class="form-select">
                                    <option value="SIN BECA">SIN BECA</option>
                                    <option value="MEDIA BECA">MEDIA BECA</option>
                                    <option value="BECA COMPLETA">BECA COMPLETA</option>
                                </select>
                                <span asp-validation-for="Beca" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="RepiteAño" class="form-label small-label">Repitente</label>
                                <select asp-for="RepiteAño" class="form-select">
                                    <option value="NO">NO</option>
                                    <option value="SI">SI</option>
                                </select>
                                <span asp-validation-for="RepiteAño" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="EstadoMatricula" class="form-label small-label">Estado de Ingreso</label>
                                <select asp-for="EstadoMatricula" class="form-select">
                                    <option value="REINGRESO">REINGRESO</option>
                                    <option value="PRIMER INGRESO">PRIMER INGRESO</option>
                                </select>
                                <span asp-validation-for="EstadoMatricula" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Observacion" class="form-label small-label">Observación</label>
                                <input asp-for="Observacion" class="form-control" />
                                <span asp-validation-for="Observacion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="FechaIngreso" class="form-label small-label">Fecha Ingreso</label>
                                <input type="date" asp-for="FechaIngreso" class="form-control" />
                                <span asp-validation-for="FechaIngreso" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left me-2"></i>Regresar
                        </a>
                        <button type="submit" class="btn btn-primary" id="btnGuardar">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Validation Scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Configurar el envío del formulario
            $('#matriculaForm').on('submit', function(e) {
                e.preventDefault();

                var form = $(this);
                var formData = new FormData(form[0]);

                Swal.fire({
                    title: 'Procesando',
                    html: 'Guardando cambios...',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        Swal.close();
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: response.message,
                                confirmButtonText: 'Aceptar'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = '@Url.Action("Index", "Matricula")';
                                }
                            });
                        } else {
                            var errorMsg = response.message;
                            if (response.errors && response.errors.length > 0) {
                                errorMsg += '<ul>';
                                response.errors.forEach(function(error) {
                                    errorMsg += '<li>' + error + '</li>';
                                });
                                errorMsg += '</ul>';
                            }

                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                html: errorMsg
                            });
                        }
                    },
                    error: function(xhr) {
                        Swal.close();
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error en la comunicación con el servidor'
                        });
                    }
                });
            });

            // Cargar detalles del grado cuando se selecciona uno
            $('#Idgrado').change(function() {
                var idGrado = $(this).val();
                if (idGrado) {
                    cargarDetallesGrado(idGrado);
                } else {
                    limpiarCamposGrado();
                }
            });

            // Configurar autocomplete para padres
            $("#Idpadre").autocomplete({
                source: function(request, response) {
                    $.get('@Url.Action("BuscarPadres", "Matricula")', {
                        term: request.term
                    }, function(data) {
                        response($.map(data, function(item) {
                            return {
                                label: item.idPadre + " - " + item.nombrePadre + " (" + item.parentesco + ")",
                                value: item.idPadre,
                                nombre: item.nombrePadre,
                                parentesco: item.parentesco,
                                telefono: item.telefonoPadre,
                                celular: item.celPadre,
                                direccion: item.direccionPadre
                            };
                        }));
                    });
                },
                minLength: 3,
                select: function(event, ui) {
                    $("#Idpadre").val(ui.item.value);
                    $("#NombrePadre").val(ui.item.nombre);
                    $("#Parentesco").val(ui.item.parentesco);
                    $("#TelefonoPadre").val(ui.item.telefono);
                    $("#CelPadre").val(ui.item.celular);
                    $("#DireccionPadre").val(ui.item.direccion);
                    return false;
                },
                focus: function(event, ui) {
                    $("#Idpadre").val(ui.item.label);
                    return false;
                }
            }).autocomplete("instance")._renderItem = function(ul, item) {
                return $("<li>")
                    .append(`<div>${item.label}</div>`)
                    .appendTo(ul);
            };
        });

        // Función para cargar los detalles de un grado específico
        function cargarDetallesGrado(idGrado) {
            $.get('@Url.Action("GetDetallesGrado", "Matricula")', { idGrado: idGrado })
                .done(function(detalles) {
                    if (detalles) {
                        $('#Grado').val(detalles.grado1);
                        $('#Seccion').val(detalles.seccion);
                        $('#Jornada').val(detalles.jornada);
                        $('#NivelDescripcion').val(detalles.nivelDescripcion);
                    } else {
                        limpiarCamposGrado();
                    }
                })
                .fail(function() {
                    mostrarAlerta('Error al cargar los detalles del grado', 'error');
                    limpiarCamposGrado();
                });
        }

        // Función para limpiar los campos de grado
        function limpiarCamposGrado() {
            $('#Grado').val('');
            $('#Seccion').val('');
            $('#Jornada').val('');
            $('#NivelDescripcion').val('');
        }

        // Función para mostrar alertas
        function mostrarAlerta(mensaje, tipo) {
            Swal.fire({
                title: 'Atención',
                text: mensaje,
                icon: tipo,
                timer: 3000,
                timerProgressBar: true,
                showConfirmButton: false
            });
        }
    </script>
</body>
</html>