@model SysnaraIMAVA.Models.Padre

@{
    ViewData["Title"] = "Editar";
}
<h2 style="font-family: Russo One, sans-serif;">Editar Datos del Padre</h2>

<hr />
<div class="row">
        <form asp-action="Edit">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idimvencargado" />
            <div class="form-group col-2">
                <label asp-for="Idpadre" class="control-label">Identidad</label>
                <input asp-for="Idpadre" class="form-control" />
                <span asp-validation-for="Idpadre" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="NombrePadre" class="control-label">Nombre del Padre o Encargado</label>
                <input asp-for="NombrePadre" class="form-control" />
                <span asp-validation-for="NombrePadre" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-2">
                <label asp-for="Parentesco" class="control-label">Parentesco</label>
                <input asp-for="Parentesco" class="form-control" />
                <span asp-validation-for="Parentesco" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Profesion" class="control-label">Profesión</label>
                <input asp-for="Profesion" class="form-control" />
                <span asp-validation-for="Profesion" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="Genero" class="control-label">Género</label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-2">
                <label asp-for="TelefonoPadre" class="control-label">Teléfono</label>
                <input asp-for="TelefonoPadre" class="form-control" />
                <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
            </div>
            <div class="form-group col-2">
                <label asp-for="CelPadre" class="control-label">Celular</label>
                <input asp-for="CelPadre" class="form-control" />
                <span asp-validation-for="CelPadre" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="DireccionPadre" class="control-label">Dirección del Padre o Encargado</label>
                <input asp-for="DireccionPadre" class="form-control" />
                <span asp-validation-for="DireccionPadre" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="Observacion" class="control-label">Observación</label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> | 
                <a class="btn btn-warning" asp-action="Index">Regresar a la Lista</a>
            </div>
        </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
