@model IEnumerable<SysnaraIMAVA.Models.Grado>

@{
    ViewData["Title"] = "Grado";
    var años = ViewBag.Años as List<SysnaraIMAVA.Models.Año>;
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-graduation-cap me-2"></i> @ViewData["Title"]
                </h3>
                <div class="badge bg-white text-primary fs-6 p-2">
                    <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4 g-3">
                <!-- Filtro de Año -->
                <div class="col-md-4">
                    <div class="form-floating">
                        <select class="form-select" id="filtroAño">
                            <option value="">Seleccione un año</option>
                            @if (años != null)
                            {
                                @foreach (var año in años)
                                {
                                    <option value="@año.Idaño">@año.Idaño</option>
                                }
                            }
                        </select>
                        <label for="filtroAño">Año Académico</label>
                    </div>
                </div>

                <!-- Botón de Registrar -->
                <div class="col-md-2 d-flex align-items-end">
                    <a href="/Grado/Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i> Registrar
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="gradosTable" class="table table-hover table-striped" style="width:100%; font-size: 14px;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Grado</th>
                            <th>Grado</th>
                            <th>Sección</th>
                            <th>Jornada</th>
                            <th>Nivel Descriptivo</th>
                            <th>Año</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .table th {
        white-space: nowrap;
        position: relative;
        background-color: #343a40 !important;
        color: white;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        border-radius: 50px;
        font-weight: 500;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }

        .btn-sm i {
            margin-right: 0.25rem;
        }

    .btn {
        transition: all 0.2s;
    }

    .form-floating > label {
        color: #6c757d;
    }

    .action-buttons {
        white-space: nowrap;
    }

        .action-buttons .btn {
            margin: 0 2px;
        }
</style>


@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#gradosTable').DataTable({
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                columns: [
                    { data: 'idgrado' },
                    { data: 'grado1' },
                    { data: 'seccion' },
                    { data: 'jornada' },
                    { data: 'niveldescripcion' },
                    { data: 'idaño' },
                    {
                        data: 'idgrado',
                        render: function (data, type, row) {
                            return `
                                <div class="action-buttons">
                                    <a class="btn btn-warning btn-sm" href="/Grado/Edit/${data}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="/Grado/Details/${data}">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Grado/Delete/${data}">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            `;
                        },
                        orderable: false,
                        className: 'text-center'
                    }
                ],
                responsive: true
            });

            function cargarGrados() {
                var idAño = $('#filtroAño').val();

                if (idAño) {
                    $.ajax({
                        url: '/Grado/GetGrados',
                        type: 'GET',
                        data: { idAño: idAño },
                        success: function (data) {
                            table.clear().rows.add(data).draw();
                        },
                        error: function (xhr, status, error) {
                            console.error('Error al cargar grados:', status, error);
                        }
                    });
                } else {
                    table.clear().draw();
                }
            }

            $('#filtroAño').change(function() {
                cargarGrados();
            });

            // Cargar grados inicialmente
            cargarGrados();
        });
    </script>
}