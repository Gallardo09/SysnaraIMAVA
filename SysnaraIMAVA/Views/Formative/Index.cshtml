        @foreach (var grado in librosPorGrado.Keys)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@grado</h5>
                        <p class="card-text">Formative Tests</p>
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@grado" aria-expanded="false" aria-controls="collapse-@grado">
                            📂 View Documents
                        </button>
                        <div class="collapse mt-3" id="collapse-@grado">
                            <div class="list-group">
                                @foreach (var libro in librosPorGrado[grado])
                                {
                                    <a href="@libro.Ruta" class="list-group-item list-group-item-action" target="_blank">
                                        📄 @libro.Nombre
