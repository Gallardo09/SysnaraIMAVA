@model IEnumerable<SysnaraIMAVA.Models.Matricula>
@{
    ViewData["Title"] = "Imprimir Notas";
    var años = ViewBag.Años as List<SysnaraIMAVA.Models.Año>;
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-print me-2"></i> @ViewData["Title"]
                </h3>
                <div class="badge bg-white text-primary fs-6 p-2">
                    <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4 g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="filtroAño">
                            <option value="">Seleccione un año</option>
                            @if (años != null)
                            {
                                @foreach (var año in años)
                                {
                                    <option value="@año.Idaño">@año.Idaño</option>
                                }
                            }
                        </select>
                        <label for="filtroAño">Año Académico</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="filtroGrado" disabled>
                            <option value="">Seleccione un grado</option>
                        </select>
                        <label for="filtroGrado">Grado</label>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table id="matriculasTable" class="table table-hover table-striped" style="width:100%; font-size: 14px;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Año</th>
                            <th>ID</th>
                            <th>DNI</th>
                            <th>Nombre del Estudiante</th>
                            <th>Género</th>
                            <th>Grado</th>
                            <th>Grados 7°-9°</th>
                            <th>Grados 10°-12°</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#matriculasTable').DataTable({
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                columns: [
                    { data: 'idaño' },
                    { data: 'idimv' },
                    { data: 'idestudiante' },
                    { data: 'nombreEstudiante' },
                    { data: 'genero' },
                    { data: 'grado' },
                    {
                        data: 'ciclo',
                        render: function (data, type, row) {
                            return renderGradeButton(row, 'ciclo');
                        }
                    },
                    {
                        data: 'secundaria',
                        render: function (data, type, row) {
                            return renderGradeButton(row, 'secundaria');
                        }
                    }
                ],
                order: [[4, 'asc'], [3, 'asc']]
            });

            function renderGradeButton(row, type) {
                var gradosCiclo = ['SÉPTIMO GRADO', 'OCTAVO GRADO', 'NOVENO GRADO'];
                var gradosSecundaria = ['DÉCIMO GRADO', 'UNDÉCIMO GRADO', 'DUODÉCIMO GRADO'];
                var isCiclo = gradosCiclo.includes(row.grado);
                var isSecundaria = gradosSecundaria.includes(row.grado);

                if ((type === 'ciclo' && isCiclo) || (type === 'secundaria' && isSecundaria)) {
                    var uniqueId = 'dropdown-' + row.ididentidad + '-' + type;
                    var listadoItems = `
                        <li><a class="dropdown-item" href="/ImprimirNotas/GenerarNotasIParcialPrimaria?idaño=${row.idaño}&ididentidad=${row.ididentidad}">I Parcial</a></li>
                        <li><a class="dropdown-item" href="/ImprimirNotas/GenerarNotasIIParcialPrimaria?idaño=${row.idaño}&ididentidad=${row.ididentidad}">II Parcial</a></li>
                        <li><a class="dropdown-item" href="/ImprimirNotas/GenerarNotasIIIParcialPrimaria?idaño=${row.idaño}&ididentidad=${row.ididentidad}">III Parcial</a></li>
                        <li><a class="dropdown-item" href="/ImprimirNotas/GenerarNotasIVParcialPrimaria?idaño=${row.idaño}&ididentidad=${row.ididentidad}">IV Parcial</a></li>
                    `;

                    return `
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="${uniqueId}" data-bs-toggle="dropdown" aria-expanded="false">
                            Opciones
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="${uniqueId}">
                            ${listadoItems}
                        </ul>
                    </div>
                    `;
                } else {
                    return '<button class="btn btn-secondary btn-sm" disabled><i class="fas fa-ban me-1"></i>No disponible</button>';
                }
            }

            $('#filtroAño').change(function () {
                var idAño = $(this).val();
                $('#filtroGrado').empty().append('<option value="">Seleccione un grado</option>');

                if (idAño) {
                    $.ajax({
                        url: '/ImprimirNotas/GetGrados',
                        data: { idAño: idAño },
                        success: function (data) {
                            $.each(data, function (index, item) {
                                $('#filtroGrado').append($('<option>', {
                                    value: item.idgrado,
                                    text: item.gradoCompleto
                                }));
                            });
                            $('#filtroGrado').prop('disabled', false);
                        }
                    });
                } else {
                    $('#filtroGrado').prop('disabled', true);
                    table.clear().draw();
                }
                cargarMatriculas();
            });

            $('#filtroGrado').change(cargarMatriculas);

            function cargarMatriculas() {
                var idAño = $('#filtroAño').val();
                var idGrado = $('#filtroGrado').val();

                if (idAño) {
                    $.ajax({
                        url: '/ImprimirNotas/GetListaEstudiantesMatricula',
                        data: { idAño: idAño, idGrado: idGrado },
                        success: function (data) {
                            table.clear().rows.add(data).draw();
                        }
                    });
                } else {
                    table.clear().draw();
                }
            }
        });
    </script>
}