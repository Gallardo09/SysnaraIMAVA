@{
    ViewData["Title"] = "Login";
    Layout = null; // No usar el layout para la página de Login
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Estilos para centrar el formulario y mejorar el diseño -->
    <style>
        /* Estilos generales */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #333;
        }

        /* Título principal */
        h1 {
            text-align: center;
            color: #0056b3;
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        /* Subtítulo */
        h3 {
            text-align: center;
            color: #777;
            font-size: 20px;
            margin-bottom: 30px;
        }

        /* Contenedor del formulario */
        .login-container {
            background: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 40px;
            border-radius: 8px;
            width: 100%;
            max-width: 400px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 14px;
                color: #555;
                margin-bottom: 8px;
                display: block;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #0056b3;
                outline: none;
            }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #0056b3;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #003b7d;
            }

        /* Estilos para la imagen */
        #imagenPrincipal {
            width: 250px;
            height: auto;
        }

        /* Contenedor de la imagen y el título */
        .logo-container {
            text-align: center;
            margin-right: 100px;
        }

        /* Media Queries para pantallas pequeñas */
        @@media (max-width: 768px) {
            body

        {
            flex-direction: column;
            padding: 20px;
            height: auto;
        }

        .logo-container {
            margin-right: 0; /* Eliminamos el margen derecho en pantallas pequeñas */
            margin-bottom: 20px; /* Añadimos margen inferior para separar del formulario */
        }

        h1 {
            font-size: 36px;
        }

        h3 {
            font-size: 18px;
        }

        .login-container {
            margin-top: 20px;
            padding: 20px;
        }

        #imagenPrincipal {
            width: 200px;
        }

        }

        @@media (max-width: 480px) {
            h1

        {
            font-size: 28px;
        }

        h3 {
            font-size: 16px;
        }

        .login-container {
            padding: 15px;
        }

        #imagenPrincipal {
            width: 150px;
        }

        }
    </style>

    <!-- SweetAlert2 y Toastr -->
    <script src="~/lib/SweetAlert2/sweetalert2_11.10.8.js"></script>
</head>
<body>
    <!-- Contenedor de la imagen y el título -->
    <div class="logo-container">
        <!-- Logo encima del título -->
        <div>
            <img id="imagenPrincipal" src="~/Recursos/home.png" alt="Logo" />
        </div>

        <!-- Título y subtítulo fuera del formulario -->
        <div>
            <h1>SYSNARA</h1>
            <h3>Sistema de Matrícula Estudiantil</h3>
        </div>
    </div>

    <!-- Formulario de Login -->
    <div class="login-container">
        <h2 style="text-align:center;">Iniciar Sesión</h2>
        <form method="post" asp-action="Login">
            <div class="form-group">
                <label for="username">Usuario</label>
                <input type="text" id="username" name="username" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
    </div>

    <!-- Mostrar SweetAlert2 solo si hay un mensaje de error -->
    @if (ViewData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: '¡Oops...!',
                text: '@Html.Raw(ViewData["ErrorMessage"])',
            });
        </script>
    }
</body>
</html>