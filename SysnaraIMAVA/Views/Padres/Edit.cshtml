@model SysnaraIMAVA.Models.Padre

@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title" style="font-family: 'Russo One', sans-serif; color:white; margin-bottom: 2px;">
                <i class="fas fa-edit me-2" style="color:white"></i>Editar Datos del Padre/Encargado
            </h2>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Idimvencargado" />

                <div class="row mb-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Idpadre" class="form-label fw-bold">Identidad</label>
                            <input asp-for="Idpadre" class="form-control" />
                            <span asp-validation-for="Idpadre" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NombrePadre" class="form-label fw-bold">Nombre Completo</label>
                            <input asp-for="NombrePadre" class="form-control" />
                            <span asp-validation-for="NombrePadre" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Idaño" class="form-label fw-bold">Año Registrado</label>
                            <input asp-for="Idaño" class="form-control" />
                            <span asp-validation-for="Idaño" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Parentesco" class="form-label fw-bold">Parentesco</label>
                            <input asp-for="Parentesco" class="form-control" />
                            <span asp-validation-for="Parentesco" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Profesion" class="form-label fw-bold">Profesión</label>
                            <input asp-for="Profesion" class="form-control" />
                            <span asp-validation-for="Profesion" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Genero" class="form-label fw-bold">Género</label>
                            <select asp-for="Genero" class="form-select">
                                <option value="MASCULINO">MASCULINO</option>
                                <option value="FEMENINO">FEMENINO</option>
                            </select>
                            <span asp-validation-for="Genero" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="TelefonoPadre" class="form-label fw-bold">Teléfono</label>
                            <input asp-for="TelefonoPadre" class="form-control" />
                            <span asp-validation-for="TelefonoPadre" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="CelPadre" class="form-label fw-bold">Celular</label>
                            <input asp-for="CelPadre" class="form-control" />
                            <span asp-validation-for="CelPadre" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Correo" class="form-label fw-bold">Correo Electrónico</label>
                            <input asp-for="Correo" class="form-control" type="email" />
                            <span asp-validation-for="Correo" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="DireccionPadre" class="form-label fw-bold">Dirección</label>
                            <input asp-for="DireccionPadre" class="form-control" />
                            <span asp-validation-for="DireccionPadre" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Observacion" class="form-label fw-bold">Observaciones</label>
                            <textarea asp-for="Observacion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observacion" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        <i class="fas fa-arrow-left me-1"></i> Regresar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 10px;
}

.card-header {
    border-radius: 10px 10px 0 0 !important;
}

.form-label {
    color: #495057;
}

.form-control, .form-select {
    border-radius: 5px;
    border: 1px solid #ced4da;
}

    .form-control:focus, .form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}