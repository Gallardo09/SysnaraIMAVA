@model IEnumerable<SysnaraIMAVA.Models.Padre>

@{
    ViewData["Title"] = "Padres de Familia";
    var años = ViewBag.Años as List<Año>;
    var añoSeleccionado = ViewBag.AñoSeleccionado as int?;
    var mostrarSinAño = ViewBag.FiltroActual as string == "SinAño";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-users me-2"></i> @ViewData["Title"]
                </h3>
                <div class="badge bg-white text-primary fs-6 p-2">
                    <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Filtro y acciones -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="form-floating">
                        <select class="form-select" id="filtroAño">
                            <option value="">Seleccione una opción</option>
                            <option value="0" data-sin-año="true" selected="@(mostrarSinAño ? "selected" : null)">
                                Sin Año
                            </option>
                            @if (años != null)
                            {
                                foreach (var año in años.OrderByDescending(a => a.Idaño))
                                {
                                    <option value="@año.Idaño" selected="@(añoSeleccionado == año.Idaño ? "selected" : null)">
                                        @año.Idaño
                                    </option>
                                }
                            }
                        </select>
                        <label for="filtroAño">Filtrar por año</label>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    @if (añoSeleccionado.HasValue)
                    {
                        <div class="alert alert-info mb-0 py-2 w-100">
                            <i class="fas fa-info-circle me-2"></i>
                            Mostrando padres del año: <strong>@añoSeleccionado</strong>
                        </div>
                    }
                    else if (mostrarSinAño)
                    {
                        <div class="alert alert-warning mb-0 py-2 w-100">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Mostrando padres <strong>sin año asignado</strong>
                        </div>
                    }
                </div>
                <div class="col-md-4 text-end">
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="fas fa-user-plus me-1"></i> Registrar Nuevo
                    </a>
                </div>
            </div>

            <!-- Tabla de Padres -->
            <div class="table-responsive">
                <table id="padresTable" class="table table-hover table-striped" style="width:100%; font-size: 14px;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Padre</th>
                            <th>Nombre</th>
                            <th>Parentesco</th>
                            <th>Profesión</th>
                            <th>Género</th>
                            <th>Teléfono</th>
                            <th>Celular</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Observación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Idpadre</td>
                                    <td>@item.NombrePadre</td>
                                    <td>@item.Parentesco</td>
                                    <td>@item.Profesion</td>
                                    <td>@item.Genero</td>
                                    <td>@item.TelefonoPadre</td>
                                    <td>@item.CelPadre</td>
                                    <td>@item.Correo</td>
                                    <td>@item.DireccionPadre</td>
                                    <td>@item.Observacion</td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Idimvencargado" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Idimvencargado" title="Detalles">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Idimvencargado" title="Eliminar">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Inicializar DataTable con tabla vacía
            var table = $('#padresTable').DataTable({
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json',
                    emptyTable: "Seleccione un año para mostrar los registros"
                },
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { orderable: false, targets: 10 }
                ]
            });

            // Manejar cambio en el filtro de año
            $('#filtroAño').change(function () {
                var valor = $(this).val();

                if (valor === "0") {
                    cargarPadresSinAño();
                } else if (valor) {
                    cargarPadresPorAño(valor);
                } else {
                    // Limpiar tabla
                    table.clear().draw();
                }
            });

            function cargarPadresPorAño(idAño) {
                $.ajax({
                    url: '/Padres/ObtenerPadresPorAño',
                    type: 'GET',
                    data: { idAño: idAño },
                    success: function (data) {
                        table.clear();

                        if (data.length > 0) {
                            $.each(data, function (i, item) {
                                table.row.add([
                                    item.idpadre,
                                    item.nombrePadre,
                                    item.parentesco || 'N/A',
                                    item.profesion || 'N/A',
                                    item.genero || 'N/A',
                                    item.telefonoPadre || 'N/A',
                                    item.celPadre || 'N/A',
                                    item.correo || 'N/A',
                                    item.direccionPadre || 'N/A',
                                    item.observacion || 'N/A',
                                    accionesHtml(item.idimvencargado)
                                ]).draw(false);
                            });
                        } else {
                            table.clear().draw();
                            Swal.fire({
                                icon: 'info',
                                title: 'Sin registros',
                                text: 'No se encontraron padres para el año seleccionado',
                                confirmButtonText: 'Aceptar',
                                confirmButtonColor: '#3085d6',
                                backdrop: 'rgba(0,0,0,0.4)'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Ocurrió un error al cargar los datos',
                            confirmButtonText: 'Aceptar'
                        });
                    }
                });
            }

            function cargarPadresSinAño() {
                $.ajax({
                    url: '/Padres/ObtenerPadresSinAño',
                    type: 'GET',
                    success: function (data) {
                        table.clear();

                        if (data.length > 0) {
                            $.each(data, function (i, item) {
                                table.row.add([
                                    item.idpadre,
                                    item.nombrePadre,
                                    item.parentesco || 'N/A',
                                    item.profesion || 'N/A',
                                    item.genero || 'N/A',
                                    item.telefonoPadre || 'N/A',
                                    item.celPadre || 'N/A',
                                    item.correo || 'N/A',
                                    item.direccionPadre || 'N/A',
                                    item.observacion || 'N/A',
                                    accionesHtml(item.idimvencargado)
                                ]).draw(false);
                            });
                        } else {
                            table.clear().draw();
                            Swal.fire({
                                icon: 'info',
                                title: 'Sin registros',
                                text: 'No se encontraron padres sin año asignado',
                                confirmButtonText: 'Aceptar',
                                confirmButtonColor: '#3085d6',
                                backdrop: 'rgba(0,0,0,0.4)'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Ocurrió un error al cargar los datos',
                            confirmButtonText: 'Aceptar'
                        });
                    }
                });
            }

            function accionesHtml(id) {
                return `<div class="action-buttons">
                            <a class="btn btn-warning btn-sm" href="/Padres/Edit/${id}" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-primary btn-sm" href="/Padres/Details/${id}" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Padres/Delete/${id}" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>`;
            }
        });
    </script>
}