@model IEnumerable<SysnaraIMAVA.Models.Año>

@{
    ViewData["Title"] = "Año";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-calendar me-2"></i> @ViewData["Title"]
                </h3>
                <div class="badge bg-white text-primary fs-6 p-2">
                    <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-end mb-4">
                <a class="btn btn-primary" asp-action="Create" style="font-size: 1rem;">
                    <i class="fas fa-plus me-1"></i> Registrar Nuevo
                </a>
            </div>

            <div class="table-responsive">
                <table id="añosTable" class="table table-hover table-striped" style="width:100%; font-size: 14px;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Año</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Observación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Idaño)</td>
                                <td>@Html.DisplayFor(modelItem => item.AñoInicio)</td>
                                <td>@Html.DisplayFor(modelItem => item.AñoFin)</td>
                                <td>@Html.DisplayFor(modelItem => item.Observacion)</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Idaño">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Idaño">
                                        <i class="fas fa-info-circle me-1"></i>Detalles
                                    </a>
                                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Idaño">
                                        <i class="fas fa-trash-alt me-1"></i>Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            white-space: nowrap;
            position: relative;
            background-color: #343a40 !important;
            color: white;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            border-radius: 50px;
            font-weight: 500;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

            .btn-sm i {
                margin-right: 0.25rem;
            }

        .btn {
            transition: all 0.2s;
        }
</style>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Verificar si DataTable ya está inicializado
            if (!$.fn.DataTable.isDataTable('#añosTable')) {
                $('#añosTable').DataTable({
                    dom: '<"top"f>rt<"bottom"lip><"clear">',
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                    },
                    columnDefs: [
                        { orderable: false, targets: 4 } // Hace que la columna de Acciones no sea ordenable
                    ]
                });
            }
        });
    </script>
}