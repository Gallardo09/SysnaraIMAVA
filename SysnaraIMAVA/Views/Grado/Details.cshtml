@model SysnaraIMAVA.Models.Grado

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <!-- Título -->
    <h2 class="text-center mb-4" style="font-family: Russo One, sans-serif;">Detalles del Grado</h2>

    <!-- Card para mostrar los detalles -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="card-title">Detalles del Grado</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>@("Año Escolar")</strong> <!-- Aquí es donde puedes personalizar el texto -->
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.IdañoNavigation.Idaño)
                </div>
            </div>
            <!-- Detalles del Grado -->
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>@("Grado Académico")</strong> <!-- Aquí es donde puedes personalizar el texto -->
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.Grado1)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Seccion)</strong>
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.Seccion)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>@Html.DisplayNameFor(model => model.Jornada)</strong>
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.Jornada)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>@("Nivel Académico")</strong> <!-- Aquí es donde puedes personalizar el texto -->
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.NivelDescripcion)
                </div>
            </div>

