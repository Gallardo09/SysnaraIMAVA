@model string

<div>
    <h6>Previsualización del libro</h6>
    @if (!string.IsNullOrEmpty(Model))
    {
        <object data="@Url.Content(Model)" type="application/pdf" width="100%" height="620px" id="pdfPreview"
                style="pointer-events: none; user-select: none;">
            <p>Su navegador no soporta la visualización de PDFs</p>
        </object>
    }
    else
    {
        <p>El archivo no se encuentra disponible.</p>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var object = document.getElementById('pdfPreview');

        // Deshabilitar clic derecho sobre el objeto PDF
        if (object) {
            object.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                return false;
            });
        }

        // Deshabilitar atajos de teclado como Ctrl + S, Ctrl + P, etc.
        window.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) &&
                (e.key === 's' || e.key === 'S' || e.key === 'p' || e.key === 'P' || e.key === 'd' || e.key === 'D')) {
                e.preventDefault();
                return false;
            }
        });
    });
</script>

<style>
    /* Deshabilitar selección de texto dentro del objeto PDF */
    object[type="application/pdf"] {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none; /* Deshabilitar eventos del ratón como clics sobre el PDF */
    }
</style>
