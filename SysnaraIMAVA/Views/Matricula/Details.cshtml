                                    <p class="text-muted">No hay foto disponible</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div> *@
        </div>
    </div>

    <!-- Botones de Acción -->
    <div class="text-center mt-4">
        <a class="btn btn-primary btn-lg" asp-action="Edit" asp-route-id="@Model?.Idest">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a class="btn btn-warning btn-lg" asp-action="Index">
            <i class="fas fa-arrow-left"></i> Regresar a la Lista
        </a>
    </div>
</div>

<!-- Estilos Personalizados -->
<style>
    .photo-frame {
        width: 100%;
        height: 300px;
        border: 2px solid #ddd;
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        overflow: hidden;
    }

    .photo-frame img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        padding: 20px;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        margin-bottom: 10px;
        color: #777;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }
</style>