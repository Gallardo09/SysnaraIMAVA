@model IEnumerable<SystemSysnara.Models.Año>

@{
    ViewData["Title"] = "Año";
}

<h2 style="font-family: 'Russo One', sans-serif; font-size: 36px; color: #007BFF; text-align: center; margin-bottom: 30px;">Registrar Año Escolar</h2>

<p style="text-align: center;">
    <a class="btn btn-primary" asp-action="Create" style="background-color: #007BFF; color: white; font-size: 18px; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
        Registrar Nuevo
    </a>
</p>


<table id="example" class="table table-striped table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>
                ID Año
            </th>
            <th>
                Fecha Inicio
            </th>
            <th>
                Fecha Fin
            </th>
            <th>
                Observación
            </th>
            <th>
                Sistema
            </th>
            <th>
                Periodo del Sistema
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idaño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sistema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SistemaPeriodo)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning" asp-route-id="@item.Idaño">Editar</a> |
                <a asp-action="Details"  class="btn btn-primary" asp-route-id="@item.Idaño">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Idaño">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
