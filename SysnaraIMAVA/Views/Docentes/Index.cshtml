@model IEnumerable<SystemSysnara.Models.Docente>

@{
    ViewData["Title"] = "Docentes";
}
<div class="container mt-0" style="margin: 0px auto 0px auto; padding:0px;">
    <!-- Título de la página -->
    <h2 class="text-center mb-4" style="font-family: 'Roboto', sans-serif; font-weight: 700;">Registrar Docente</h2>

    <!-- Card Contenedor con un diseño más suave -->
    <div class="card shadow-sm border-light">
        <div class="card-body text-center">
            <!-- Botón para registrar nuevo docente -->
            <a class="btn btn-outline-primary" asp-action="Create"><i class="fas fa-user-plus"></i> Registrar Nuevo</a>
        </div>
    </div>
</div>

<table id="example" class="table table-striped table-hover" style="width:100%; font-size: 13px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Iddocente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdañoNavigation)
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Iddocente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idaño)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Idpk">Editar</a> 
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Idpk">Detalles</a> 
             </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Idpk">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- Font Awesome for Icons -->
}