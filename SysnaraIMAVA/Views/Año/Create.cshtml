@model SystemSysnara.Models.Año

@{
    ViewData["Title"] = "Nuevo";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="font-family: Russo One, sans-serif;">Registrar Nuevo Año</h2>
    <form asp-action="Create" class="bg-light p-4 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Idaño" class="control-label">ID Año</label>
                    <input asp-for="Idaño" class="form-control" id="IdañoInput" />
                    <span asp-validation-for="Idaño" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AñoInicio" class="control-label">Fecha Inicial</label>
                    <input type="date" asp-for="AñoInicio" class="form-control" />
                    <span asp-validation-for="AñoInicio" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AñoFin" class="control-label">Fecha Final</label>
                    <input type="date" asp-for="AñoFin" class="form-control" />
                    <span asp-validation-for="AñoFin" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Observacion" class="control-label">Observación</label>
                    <input asp-for="Observacion" class="form-control" />
                    <span asp-validation-for="Observacion" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Sistema" class="control-label">Sistema</label>
                    <select asp-for="Sistema" class="form-control" id="SistemaSelect">
                        <option value="">Seleccione un sistema</option>
                        <option value="INTERNACIONAL">INTERNACIONAL</option>
                        <option value="ANGLOSAJÓN">ANGLOSAJÓN</option>
                    </select>
                    <span asp-validation-for="Sistema" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SistemaPeriodo" class="control-label">Sistema (Periodo)</label>
                    <input asp-for="SistemaPeriodo" class="form-control" id="SistemaPeriodoInput" readonly />
                    <span asp-validation-for="SistemaPeriodo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a class="btn btn-secondary" asp-action="Index">Regresar a la Lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        @if (TempData["WarningMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'warning',
                    title: 'Advertencia',
                    text: '@Html.Raw(TempData["WarningMessage"])',
                    confirmButtonText: 'Aceptar'
                });
            </script>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    confirmButtonText: 'Aceptar'
                });
            </script>
        }
    }

    @* FUNCIÓN PARA EL SISTEMA PERIODO *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Obtener los elementos del DOM
            const idAnoInput = document.querySelector("#IdañoInput"); // Campo de Idaño
            const sistemaSelect = document.querySelector("#SistemaSelect"); // Campo de Sistema
            const sistemaPeriodoInput = document.querySelector("#SistemaPeriodoInput"); // Campo de SistemaPeriodo

            // Función que actualiza el campo SistemaPeriodo según el Sistema seleccionado
            function updateSistemaPeriodo() {
                // Obtener el valor de Idaño y asegurarse de que sea un número
                const idAnoValue = idAnoInput.value;
                const anio = parseInt(idAnoValue, 10);

                // Si el valor no es un número, no hacer nada
                if (isNaN(anio)) {
                    return;
                }

                let sistemaPeriodo = idAnoValue; // Valor por defecto del SistemaPeriodo (solo el año)

                // Si se selecciona ANGLOSAJÓN, concatenamos el año siguiente
                if (sistemaSelect.value === "ANGLOSAJÓN") {
                    const siguienteAnio = anio + 1;
                    sistemaPeriodo = `${idAnoValue}-${siguienteAnio}`;
                }

                // Asignamos el valor al campo SistemaPeriodo
                sistemaPeriodoInput.value = sistemaPeriodo;
            }

            // Llamar a la función de inmediato para asegurarse de que se actualice cuando ya haya valores
            updateSistemaPeriodo();

            // Asociar la función al evento change tanto del select de Idaño como de Sistema
            idAnoInput.addEventListener("input", updateSistemaPeriodo); // Si el usuario cambia el valor de Idaño
            sistemaSelect.addEventListener("change", updateSistemaPeriodo); // Si el usuario cambia el valor de Sistema
        });
    </script>
}