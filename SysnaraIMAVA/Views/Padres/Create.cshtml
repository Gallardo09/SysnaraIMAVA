@model SysnaraIMAVA.Models.Padre

@{
    ViewData["Title"] = "Registrar Padre/Encargado";
    var años = ViewBag.Años as List<Año> ?? new List<Año>();
}

<div class="container mt-3">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white py-2">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-plus me-1"></i> @ViewData["Title"]
                </h5>
                <a asp-action="Index" class="btn btn-light btn-sm py-1">
                    <i class="fas fa-arrow-left me-1"></i> Regresar
                </a>
            </div>
        </div>

        <div class="card-body p-3">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-2"></div>

                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <input asp-for="Idpadre" class="form-control form-control-sm" placeholder=" " required />
                            <label asp-for="Idpadre" class="small">DNI</label>
                            <span asp-validation-for="Idpadre" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-1">
                            <input asp-for="NombrePadre" class="form-control form-control-sm" placeholder=" " required />
                            <label asp-for="NombrePadre" class="small">Nombre del Encargado</label>
                            <span asp-validation-for="NombrePadre" class="invalid-feedback small"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-2">
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <select asp-for="Parentesco" class="form-select form-select-sm" required>
                                <option value="">Seleccione...</option>
                                <option value="padre">PADRE</option>
                                <option value="madre">MADRE</option>
                                <option value="encargado">ENCARGADO(A)</option>
                                <option value="hermano">HERMANO(A)</option>
                                <option value="tio">TIO(A)</option>
                                <option value="abuelo">ABUELO(A)</option>
                                <option value="primo">PRIMO(A)</option>
                            </select>
                            <label asp-for="Parentesco" class="small"></label>
                            <span asp-validation-for="Parentesco" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <input asp-for="Profesion" class="form-control form-control-sm" placeholder=" " />
                            <label asp-for="Profesion" class="small">Profesión</label>
                            <span asp-validation-for="Profesion" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <select asp-for="Genero" class="form-select form-select-sm">
                                <option value="">Seleccione...</option>
                                <option value="MASCULINO">MASCULINO</option>
                                <option value="FEMENINO">FEMENINO</option>
                            </select>
                            <label asp-for="Genero" class="small">Género</label>
                            <span asp-validation-for="Genero" class="invalid-feedback small"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-2">
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <input asp-for="TelefonoPadre" class="form-control form-control-sm" placeholder=" " />
                            <label asp-for="TelefonoPadre" class="small">Teléfono</label>
                            <span asp-validation-for="TelefonoPadre" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <input asp-for="CelPadre" class="form-control form-control-sm" placeholder=" " />
                            <label asp-for="CelPadre" class="small">Celular</label>
                            <span asp-validation-for="CelPadre" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <input asp-for="Correo" type="email" class="form-control form-control-sm" placeholder=" " />
                            <label asp-for="Correo" class="small"></label>
                            <span asp-validation-for="Correo" class="invalid-feedback small"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-2">
                    <div class="col-md-8">
                        <div class="form-floating mb-1">
                            <input asp-for="DireccionPadre" class="form-control form-control-sm" placeholder=" " />
                            <label asp-for="DireccionPadre" class="small">Dirección</label>
                            <span asp-validation-for="DireccionPadre" class="invalid-feedback small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-1">
                            <select asp-for="Idaño" class="form-select form-select-sm">
                                <option value="">Sin año asignado</option>
                                @foreach (var año in años.OrderByDescending(a => a.Idaño))
                                {
                                    <option value="@año.Idaño">@año.Idaño</option>
                                }
                            </select>
                            <label asp-for="Idaño" class="small">Año de Registro</label>
                            <span asp-validation-for="Idaño" class="invalid-feedback small"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-2">
                    <div class="form-floating">
                        <textarea asp-for="Observacion" class="form-control form-control-sm" placeholder=" " style="height: 70px"></textarea>
                        <label asp-for="Observacion" class="small">Observación</label>
                        <span asp-validation-for="Observacion" class="invalid-feedback small"></span>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-2">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
        .card {
            border-radius: 0.3rem;
            font-size: 0.9rem;
        }

        .card-header {
            padding: 0.5rem 1rem;
        }

        .form-floating > label {
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
        }

        .form-control, .form-select,
        .form-control-sm, .form-select-sm {
            padding: 0.25rem 0.5rem;
            height: calc(2rem + 2px);
            font-size: 0.85rem;
            line-height: 1.3;
        }

        .form-floating > .form-control-plaintext ~ label,
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            transform: scale(0.85) translateY(-0.7rem) translateX(0.15rem);
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

        .invalid-feedback {
            font-size: 0.75rem;
        }

        textarea.form-control {
            height: auto !important;
            min-height: 70px;
        }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}