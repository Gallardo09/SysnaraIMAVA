@model SysnaraIMAVA.Models.Padre

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title" style="font-family: 'Russo One', sans-serif; color:white; margin-bottom: 2px;">
                <i class="fas fa-user-tie me-2" style="color:white";></i>Detalles del Padre/Encargado
            </h2>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded mb-3">
                        <h4 class="text-primary mb-3">Información Personal</h4>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Identidad:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Idpadre)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Nombre:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.NombrePadre)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Parentesco:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Parentesco)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Género:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Genero)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Profesión:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Profesion)</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded mb-3">
                        <h4 class="text-primary mb-3">Información de Contacto</h4>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Teléfono:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.TelefonoPadre)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Celular:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.CelPadre)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Correo:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Correo)</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Dirección:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.DireccionPadre)</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded mb-3">
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Año Registrado:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Idaño)</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-box bg-light p-3 rounded mb-3">
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">Observaciones:</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Observacion)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left me-1"></i> Regresar a la Lista
                </a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Idimvencargado">
                    <i class="fas fa-edit me-1"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>


<style>
    .info-box {
        border-left: 4px solid #0d6efd;
        transition: all 0.3s ease;
    }

        .info-box:hover {
            box-shadow: 0 0 10px #ffffff;
        }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .fw-bold {
        color: #495057;
    }
</style>
