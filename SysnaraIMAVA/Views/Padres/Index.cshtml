@model IEnumerable<SysnaraIMAVA.Models.Padre>

@{
    ViewData["Title"] = "Padres de Familia";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-users me-2"></i> @ViewData["Title"]
                </h3>
                <div class="badge bg-white text-primary fs-6 p-2">
                    <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-end mb-4">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-user-plus me-1"></i> Registrar Nuevo
                </a>
            </div>

            <div class="table-responsive">
                <table id="padresTable" class="table table-hover table-striped" style="width:100%; font-size: 14px;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Padre</th>
                            <th>Nombre</th>
                            <th>Parentesco</th>
                            <th>Profesión</th>
                            <th>Género</th>
                            <th>Teléfono</th>
                            <th>Celular</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Observación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Idpadre)</td>
                                <td>@Html.DisplayFor(modelItem => item.NombrePadre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Parentesco)</td>
                                <td>@Html.DisplayFor(modelItem => item.Profesion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                                <td>@Html.DisplayFor(modelItem => item.TelefonoPadre)</td>
                                <td>@Html.DisplayFor(modelItem => item.CelPadre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                                <td>@Html.DisplayFor(modelItem => item.DireccionPadre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Observacion)</td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Idimvencargado">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Idimvencargado">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Idimvencargado">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<style>
        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            white-space: nowrap;
            position: relative;
            background-color: #343a40 !important;
            color: white;
        }

        .table td {
            vertical-align: middle;
            word-wrap: break-word;
        }

            /* Ajustes específicos para columnas */
            .table td:nth-child(1) {
                width: 5%;
            }
            /* ID Padre */
            .table td:nth-child(2) {
                width: 15%;
            }
            /* Nombre */
            .table td:nth-child(3) {
                width: 8%;
            }
            /* Parentesco */
            .table td:nth-child(4) {
                width: 10%;
            }
            /* Profesión */
            .table td:nth-child(5) {
                width: 6%;
            }
            /* Género */
            .table td:nth-child(6),
            .table td:nth-child(7) {
                width: 8%;
            }
            /* Teléfono y Celular */
            .table td:nth-child(8) {
                width: 12%;
            }
            /* Correo */
            .table td:nth-child(9) {
                width: 12%;
            }
            /* Dirección */
            .table td:nth-child(10) {
                width: 10%;
            }
            /* Observación */
            .table td:nth-child(11) {
                width: 6%;
            }
        /* Acciones */

        .badge {
            border-radius: 50px;
            font-weight: 500;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

            .btn-sm i {
                margin-right: 0;
            }

        .btn {
            transition: all 0.2s;
        }

        .action-buttons {
            white-space: nowrap;
        }

            .action-buttons .btn {
                margin: 0 2px;
            }
    </style>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#padresTable').DataTable({
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { orderable: false, targets: 10 } // Deshabilitar ordenamiento para acciones
                ]
            });
        });
    </script>
}