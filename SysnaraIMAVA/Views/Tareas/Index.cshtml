@model List<SystemSysnara.Models.Clase>
@{
    ViewData["Title"] = "Mis Clases";
    // Lista de colores vibrantes
    var colores = new List<string> {
        "#FF6F61", "#6B5B95", "#88B04B", "#FFA500", "#92A8D1",
        "#955251", "#B565A7", "#009B77", "#DD4124", "#D65076",
        "#45B8AC", "#EFC050", "#5B5EA6", "#9B2335", "#DFCFBE"
    };
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Contenedor principal */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Grid para las cards */
        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        /* Estilo de cada card */
        .card {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            position: relative;
        }

            /* Efecto hover en las cards */
            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

            /* Efecto espejo */
            .card::after {
                content: "";
                position: absolute;
                bottom: -10px;
                left: 0;
                right: 0;
                height: 20px;
                background: linear-gradient(to bottom, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0));
                transform: scaleY(-1);
                opacity: 0.5;
                transition: opacity 0.3s ease;
            }

            .card:hover::after {
                opacity: 0.8;
            }

        /* Imagen de la portada de la clase */
        .card-img-top {
            width: 100%;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #fff; /* Texto en blanco para mejor contraste */
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5); /* Sombra para mejorar legibilidad */
        }

        /* Cuerpo de la card */
        .card-body {
            padding: 20px;
        }

        /* Título de la clase */
        .card-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
            color: #2d87f0;
        }

        /* Descripción de la clase */
        .card-text {
            font-size: 14px;
            color: #777;
            margin-bottom: 15px;
        }

        /* Botón para acceder a la clase */
        .btn-classroom {
            background-color: #2d87f0;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            /* Efecto hover en el botón */
            .btn-classroom:hover {
                background-color: #1a6ad4;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">My Classes</h1>
        <div class="cards-grid">
            @foreach (var clase in Model.Select((value, index) => new { value, index }))
            {
                var color = colores[clase.index % colores.Count]; // Ciclo de colores
                <div class="card" onclick="window.open('@clase.value.Url', '_blank')">
                    <div class="card-img-top" style="background-color: @color;">
                        @clase.value.Titulo
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@clase.value.Titulo</h5>
                        <p class="card-text">@clase.value.Descripcion</p>
                        <a href="@clase.value.Url" class="btn-classroom" target="_blank">Ir a la clase</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>